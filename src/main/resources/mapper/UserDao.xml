<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDao">

    <resultMap type="com.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="oldname" column="oldName" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="birth" column="birth" jdbcType="OTHER"/>
        <result property="fathername" column="fatherName" jdbcType="VARCHAR"/>
        <result property="mothername" column="motherName" jdbcType="VARCHAR"/>
        <result property="fatherid" column="fatherId" jdbcType="INTEGER"/>
        <result property="motherid" column="motherId" jdbcType="INTEGER"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="text" column="text" jdbcType="VARCHAR"/>
        <result property="temp1" column="temp1" jdbcType="VARCHAR"/>
        <result property="temp2" column="temp2" jdbcType="VARCHAR"/>
        <result property="temp3" column="temp3" jdbcType="VARCHAR"/>
        <result property="temp4" column="temp4" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, name, oldName, sex, birth, fatherId, motherId, img, text, temp1, temp2, temp3, temp4
        from test.user
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByName" resultMap="UserMap">
        select
          id, name, oldName, sex, birth, fatherId, motherId, img, text, temp1, temp2, temp3, temp4
        from test.user
        where name like "%"#{name}"%"
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          	t1.id,
          	t1.NAME name,
          	t1.oldName,
          	t1.sex,
          	t1.birth,
          	t2.NAME fatherName,
          	t3.NAME motherName,
          	t1.img,
          	t1.text,
          	t1.temp1,
          	t1.temp2,
          	t1.temp3,
          	t1.temp4
        FROM test. USER t1
        LEFT JOIN test. USER t2 ON t1.fatherId = t2.id
        LEFT JOIN test. USER t3 ON t1.motherId = t3.id
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, name, oldName, sex, birth, fatherId, motherId, img, text, temp1, temp2, temp3, temp4
        from test.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="oldname != null and oldname != ''">
                and oldName = #{oldname}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="birth != null">
                and birth = #{birth}
            </if>
            <if test="fatherid != null">
                and fatherId = #{fatherid}
            </if>
            <if test="motherid != null">
                and motherId = #{motherid}
            </if>
            <if test="img != null and img != ''">
                and img = #{img}
            </if>
            <if test="text != null and text != ''">
                and text = #{text}
            </if>
            <if test="temp1 != null and temp1 != ''">
                and temp1 = #{temp1}
            </if>
            <if test="temp2 != null and temp2 != ''">
                and temp2 = #{temp2}
            </if>
            <if test="temp3 != null and temp3 != ''">
                and temp3 = #{temp3}
            </if>
            <if test="temp4 != null and temp4 != ''">
                and temp4 = #{temp4}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.user(id,name, oldName, sex, birth, fatherId, motherId, img, text, temp1, temp2, temp3, temp4)
        values (null,#{name}, #{oldname}, #{sex}, #{birth}, #{fatherid}, #{motherid}, #{img}, #{text}, #{temp1}, #{temp2}, #{temp3}, #{temp4})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="oldname != null and oldname != ''">
                oldName = #{oldname},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="birth != null">
                birth = #{birth},
            </if>
            <if test="fatherid != null">
                fatherId = #{fatherid},
            </if>
            <if test="motherid != null">
                motherId = #{motherid},
            </if>
            <if test="img != null and img != ''">
                img = #{img},
            </if>
            <if test="text != null and text != ''">
                text = #{text},
            </if>
            <if test="temp1 != null and temp1 != ''">
                temp1 = #{temp1},
            </if>
            <if test="temp2 != null and temp2 != ''">
                temp2 = #{temp2},
            </if>
            <if test="temp3 != null and temp3 != ''">
                temp3 = #{temp3},
            </if>
            <if test="temp4 != null and temp4 != ''">
                temp4 = #{temp4},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.user where id = #{id}
    </delete>

</mapper>